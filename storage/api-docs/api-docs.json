        "/api/accounts/{id}/total-balance": {
            "get": {
                "tags": [
                    "Accounts"
                ],
                "summary": "Get total balance including children accounts",
                "operationId": "f090f4a231be921b3b6cd429f75e14d7",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Total account balance"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
