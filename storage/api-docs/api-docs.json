    "paths": {
        "/api/test": {
            "get": {
                "tags": [
                    "Test"
                ],
                "summary": "Test Endpoint to verify Swagger",
                "operationId": "51d98c8ce3052b28283bde47c9996025",
                "responses": {
                    "200": {
                        "description": "Swagger is working!"
                    }
                }
            }
        },
        "/api/accounts": {
            "get": {
                "tags": [
                    "Accounts"
                ],
                "summary": "Get all user accounts",
                "operationId": "e2c6417368ae098c813b932c8a7726a8",
                "responses": {
                    "200": {
                        "description": "List of accounts"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Accounts"
                ],
                "summary": "Create a new account",
                "operationId": "325487f288176d8fefe93c68d36202e8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "type",
                                    "account_name"
                                ],
                                "properties": {
                                    "type": {
                                        "type": "string"
                                    },
                                    "account_name": {
                                        "type": "string"
                                    },
                                    "balance": {
                                        "type": "number"
                                    },
                                    "interest_rate": {
                                        "type": "number"
                                    },
                                    "credit_limit": {
                                        "type": "number"
                                    },
                                    "minimum_balance": {
                                        "type": "number"
                                    },
                                    "parent_account_id": {
                                        "type": "integer"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Account created"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/accounts/{id}": {
            "get": {
                "tags": [
                    "Accounts"
                ],
                "summary": "Get a single account",
                "operationId": "1705fe31beef661ca7097ab2698431e6",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Account ID",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The account data"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
