        "/api/verify-code": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Verify email using code",
                "operationId": "30951c1eae4688fba36236f81ed0ba0b",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "code"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "code": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Email verified"
                    },
                    "422": {
                        "description": "Invalid code"
                    }
                }
            }
        },
        "/api/verify-code/resend": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Resend verification code",
                "operationId": "18e435ceeaaf90272c8b8cfac7efe8da",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Code resent"
                    }
                }
            }
        },
